{
  "name": "admin-backend",
  "version": "1.0.0",
  "description": "Backend del módulo administrativo de AndinaTrading",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node ./src/server.js",
    "dev": "nodemon ./src/server.js",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --runInBand",
    "test:ci": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --ci --reporters=default --reporters=jest-junit",
    "coverage": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.19.2",
    "mysql2": "^3.10.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "jest-junit": {
    "outputDirectory": "reports/junit",
    "outputName": "junit.xml",
    "ancestorSeparator": " › "
  }
}
